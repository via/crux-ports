#Depend on: librsync python gnupg
name=duplicity
version=0.6.22
release=1
source=(http://code.launchpad.net/duplicity/0.6-series/0.6.22/+download/duplicity-0.6.22.tar.gz)

build() {
  cd $name-$version
  python setup.py build
  python setup.py install --prefix=$PKG
  rm -r $PKG/share/doc
  rm -r $PKG/share/locale
}
