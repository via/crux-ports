name=dmenu
version=4.5
release=1
source=(http://dl.suckless.org/tools/$name-$version.tar.gz)
build() {
  cd $name-$version
  sed -i 's/PREFIX = \/usr\/local/PREFIX = \/usr/' config.mk
  sed -i 's/MANPREFIX = ${PREFIX}\/share\/man/MANPREFIX = ${PREFIX}\/man/' config.mk
  make
  make DESTDIR=$PKG install
}
